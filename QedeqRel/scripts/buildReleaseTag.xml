<!-- This is the Ant build file for building the release of project Hilbert II -->
<project name="Hilbert II" default="release" basedir="../..">

  <!-- set global properties for this build -->
  <property file="${basedir}/QedeqRel/conf/build.properties" />
  <property name="qedeq.scr.dist"     value="${basedir}/../release/scr/dist" />
  <property name="qedeq.se.dist"      value="${basedir}/../release/se/dist" />
  <property name="qedeq.rel.dist"     value="${basedir}/../release/release" />
  <property name="qedeq.rel.build"    value="${basedir}/../release/se/temp" />


  <target name="init">
    <tstamp>
      <format property="qedeq.timestamp" pattern="yyyy-MM-dd HH:mm:ss"/>
    </tstamp>
    <mkdir dir="${qedeq.dest}"/>
    <mkdir dir="${qedeq.dist}"/>
    <mkdir dir="${qedeq.temp}"/>
  </target>

  <target name="release" depends="init">
    <copy todir="${qedeq.rel.dist}/${qedeq.release.version}"> 
      <fileset dir="${qedeq.se.dist}"/>
    </copy>
    <copy todir="${qedeq.rel.dist}/${qedeq.release.version}"> 
      <fileset dir="${qedeq.scr.dist}"/>
    </copy>
  </target>

</project>


