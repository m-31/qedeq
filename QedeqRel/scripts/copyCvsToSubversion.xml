<!-- This is the Ant build file for copying the subversion projects onto the cvs projects -->
<project name="Hilbert II" default="all" basedir="../../..">

  <!-- set global properties for this build -->

  <property name="qedeq.trans.src"       value="${basedir}/eclipse_cvs" />
  <property name="qedeq.trans.dest"        value="${basedir}/eclipse" />
  
  <target name="copy">
<!--
    <delete failonerror="false">
      <fileset dir="${qedeq.trans.dest}/${module}">
        <include name="**/*"/>
      </fileset>
    </delete>
-->    
    <copy todir="${qedeq.trans.dest}/${module}" >
      <fileset dir="${qedeq.trans.src}/${module}" />
    </copy>
  </target>
    
  <target name="all">
    <antcall target="copy">
      <param name="module" value="QedeqDoc" />
    </antcall>
    <antcall target="copy">
      <param name="module" value="QedeqGuiSe" />
    </antcall>
    <antcall target="copy">
      <param name="module" value="QedeqKernelSe" />
    </antcall>
    <antcall target="copy">
      <param name="module" value="QedeqKernelSeTest" />
    </antcall>
    <antcall target="copy">
      <param name="module" value="QedeqRel" />
    </antcall>
    <antcall target="copy">
      <param name="module" value="QedeqLib" />
    </antcall>
  </target>

</project>


