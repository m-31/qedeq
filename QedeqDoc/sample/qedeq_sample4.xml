                          <PREDVAR id="D"/>
                        </OR>
                      </OR>
                      <OR>
                        <OR>
                          <PREDVAR id="C"/>
                          <PREDVAR id="D"/>
                        </OR>
                        <PREDVAR id="A"/>
                      </OR>
